<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/derpfest_card_side_margin"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="@dimen/derpfest_card_radius"
    app:cardElevation="0dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView 
            android:layout_width="match_parent" 
            android:layout_height="match_parent" 
            android:src="@drawable/ui_scrim" 
            android:alpha="0.1"/>
            
        <LinearLayout 
            android:gravity="center" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content"
            android:paddingVertical="24dp">
            
            <ImageView 
                android:id="@+id/derp_branding_image" 
                android:layout_width="260dp"
                android:layout_height="48dp"
                android:src="@drawable/derp_branding_image"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:tint="?android:attr/colorAccent" />
                
        </LinearLayout>
    </FrameLayout>
</com.google.android.material.card.MaterialCardView>
